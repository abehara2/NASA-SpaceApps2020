{
    "version": 2,
    "name": "food4thought",
    "alias": "food4thought.now.sh",
    
    "builds": [
        {
          "src": "frontend/package.json",
          "use": "@now/static-build",
          "config": {
            "distDir": "build"
          }
        },
        {
          "src": "backend/*.js",
          "use": "@now/node"
        }
      ],
      "routes": [
        {
          "src": "/api/(.*)",
          "headers": {
            "cache-control": "s-maxage=0"
          },
          "dest": "backend/server.js"
        },
        {
          "src": "/(.*)",
          "dest": "/frontend/$1",
          "continue": true
        }
      ],
    "env": {
        "DATABASE_URL": "@f4t_db_uri"
        
    },
    "build": {
      "env": {
        "REACT_APP_BACKEND_URL": "/api"
        
      }
    }
  }